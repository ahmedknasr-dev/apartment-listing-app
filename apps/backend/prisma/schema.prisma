generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Apartment {
  id          String   @id @default(uuid())
  title       String
  description String?
  address     String
  city        String
  price       Float
  bedrooms    Int
  bathrooms   Int
  area        Float
  images      String[]
  amenities   String[]
  available   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("apartments")
}

