generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Apartment {
  id          String   @id @default(uuid())
  unitName    String
  unitNumber  String
  project     String
  description String?
  address     String
  city        String
  price       Float
  bedrooms    Int
  bathrooms   Int
  area        Float
  images      String[]
  available   Boolean  @default(true)
  createdAt   String   @default("")
  updatedAt   String

  @@map("apartments")
}

